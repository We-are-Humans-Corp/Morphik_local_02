# Simplified Dockerfile for local development
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY pyproject.toml uv.lock ./
COPY fde ./fde

# Install UV
RUN pip install uv

# Install Python dependencies
RUN uv pip install --system -r <(uv pip compile pyproject.toml --all-extras) || \
    pip install fastapi uvicorn httpx pydantic sqlalchemy asyncpg redis psycopg2-binary python-jose python-multipart

# Copy application code
COPY . .

# Expose port
EXPOSE 8000

# Run the application
CMD ["uvicorn", "core.api:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]